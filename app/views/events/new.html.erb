<div class="container">
  <%= form_for @event do |f| %>
    <div class="form-group">
      <label for="title">Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="title">Description</label>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="start">Start Time</label>
      <div class='input-group date'  id= 'event_start_time'>
        <%=f.text_field :start, class: "form-control"%>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>

    <div class="form-group">
      <label for="end">End Time</label>
      <div class='input-group date', id="event_end_time">
        <%=f.text_field :end, class: "form-control" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label for="end">Invite Users</label>
      <%= f.collection_check_boxes(:event_users, User.all, :id, :name) %>
    </div>
    <div class="form-group">

      <%= f.submit 'Create Event', class: 'btn btn-primary' %>
    </div>
  <%- end %>
</div>
